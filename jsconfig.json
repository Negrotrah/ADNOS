{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./app/components/*"],
      "@lib/*": ["./lib/*"],
      "@hooks/*": ["./hooks/*"],
      "@config/*": ["./config/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
} 